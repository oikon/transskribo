    "deny": [
      "Bash(git push*)",
      "Bash(git push --force*)",
      "Bash(git reset --hard*)",
      "Bash(git checkout .)",
      "Bash(git clean*)",
      "Bash(git branch -D*)",
      "Bash(rm -rf*)",
      "Bash(pip install*)",
      "Bash(curl*)",
      "Bash(wget*)"
    ]
  }
}
